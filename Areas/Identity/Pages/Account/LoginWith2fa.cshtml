@page
@model LoginWith2faModel
@{
    ViewData["Title"] = "İki Faktörlü Doğrulama";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-dark text-white text-center py-4">
                    <i class="bi bi-shield-check text-warning display-4 mb-2"></i>
                    <h3 class="fw-bold mb-0">Güvenlik Onayı</h3>
                </div>
                <div class="card-body p-4 p-md-5">
                    <p class="text-muted small text-center mb-4">Lütfen doğrulama uygulamanızdaki kodu giriniz.</p>
                    <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                        <input asp-for="RememberMe" type="hidden" />
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.TwoFactorCode" class="form-control text-center fs-4 fw-bold" autocomplete="off" />
                            <label asp-for="Input.TwoFactorCode">Doğrulama Kodu</label>
                            <span asp-validation-for="Input.TwoFactorCode" class="text-danger small"></span>
                        </div>
                        <div class="form-check mb-4">
                            <input asp-for="Input.RememberMachine" class="form-check-input" />
                            <label asp-for="Input.RememberMachine" class="form-check-label small text-muted">Bu cihazı hatırla</label>
                        </div>
                        <button type="submit" class="btn btn-warning btn-lg w-100 fw-bold py-3 mb-3">DOĞRULA</button>
                    </form>
                    <p class="text-center small text-muted">
                        Cihaza erişimin yok mu? <a id="recovery-code-login" asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl" class="text-dark fw-bold">Kurtarma kodu ile gir</a>.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }