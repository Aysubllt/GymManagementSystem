@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Şifreniz Değiştirildi";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card shadow-lg border-0 rounded-4 p-5">
                <div class="mb-4">
                    <i class="bi bi-check-circle-fill text-success display-1"></i>
                </div>
                
                <h2 class="fw-bold mb-3">İşlem Başarılı!</h2>
                <p class="text-muted fs-5 mb-4">Şifreniz başarıyla güncellendi. Artık yeni şifrenizle giriş yapabilirsiniz.</p>
                
                <hr class="w-25 mx-auto mb-4">
                
                <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                    <a asp-page="./Login" class="btn btn-dark btn-lg px-5 fw-bold rounded-pill shadow-sm border-warning border-2">
                        GİRİŞ YAP <i class="bi bi-box-arrow-in-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>