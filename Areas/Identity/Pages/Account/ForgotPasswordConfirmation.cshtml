@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "E-posta Gönderildi";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card shadow-lg border-0 rounded-4 p-5">
                <i class="bi bi-envelope-check-fill text-warning display-1 mb-4"></i>
                <h2 class="fw-bold">Kontrol Et!</h2>
                <p class="text-muted fs-5">Şifreni sıfırlamak için gerekli bağlantıyı e-posta adresine gönderdik. Lütfen gelen kutunu (ve spam klasörünü) kontrol et.</p>
                <div class="mt-4">
                    <a asp-page="./Login" class="btn btn-dark btn-lg px-5 fw-bold rounded-pill">Giriş Sayfasına Dön</a>
                </div>
            </div>
        </div>
    </div>
</div>