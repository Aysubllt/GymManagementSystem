@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Kayıt Onayı";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card shadow-lg border-0 rounded-4 p-5">
                <i class="bi bi-send-check text-warning display-1 mb-4"></i>
                <h2 class="fw-bold">Neredeyse Bitti!</h2>
                <hr class="w-25 mx-auto my-4">
                
                @if (@Model.DisplayConfirmAccountLink)
                {
                    <div class="p-3 bg-light rounded-3 border">
                        <p class="text-muted">Geliştirme aşamasında olduğunuz için doğrudan buradan onaylayabilirsiniz:</p>
                        <a id="confirm-link" href="@Model.EmailConfirmationUrl" class="btn btn-success btn-lg fw-bold px-4">Hesabımı Onayla</a>
                    </div>
                }
                else
                {
                    <p class="text-muted fs-5">Lütfen hesabınızı onaylamak için e-posta adresinize gönderdiğimiz bağlantıya tıklayın.</p>
                }
            </div>
        </div>
    </div>
</div>