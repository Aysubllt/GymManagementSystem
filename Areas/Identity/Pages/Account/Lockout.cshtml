@page
@model LockoutModel
@{
    ViewData["Title"] = "Hesap Kilitlendi";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card shadow-lg border-0 rounded-4 p-5 border-top border-danger border-5">
                <i class="bi bi-exclamation-octagon-fill text-danger display-1 mb-4"></i>
                <h2 class="fw-bold text-danger text-uppercase">Erişim Engellendi</h2>
                <p class="text-muted fs-5">Çok fazla hatalı giriş denemesi nedeniyle hesabınız geçici olarak kilitlenmiştir. Lütfen daha sonra tekrar deneyiniz.</p>
                <div class="mt-4">
                    <a asp-page="./Login" class="btn btn-outline-dark px-4 fw-bold">Yeniden Dene</a>
                </div>
            </div>
        </div>
    </div>
</div>