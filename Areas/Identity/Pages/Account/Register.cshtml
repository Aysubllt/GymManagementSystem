@page
@model RegisterModel
@{
    ViewData["Title"] = "Üye Kaydı";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                
                <div class="card-header bg-dark text-white text-center py-4 border-0">
                    <div class="mb-2">
                        <i class="bi bi-person-plus-fill text-warning" style="font-size: 3rem;"></i>
                    </div>
                    <h2 class="fw-bold mb-0 text-uppercase">SAU GYM'e Katıl</h2>
                    <p class="text-white-50 small">Hemen üye ol, hedeflerine bir adım daha yaklaş!</p>
                </div>

                <div class="card-body p-4 p-md-5">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger p-2 small border-0 shadow-sm" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control rounded-3" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="text-muted">
                                <i class="bi bi-envelope me-2"></i>E-posta Adresi
                            </label>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="Input.Password" class="form-control rounded-3" autocomplete="new-password" aria-required="true" placeholder="password" />
                                    <label asp-for="Input.Password" class="text-muted">
                                        <i class="bi bi-shield-lock me-2"></i>Şifre
                                    </label>
                                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="Input.ConfirmPassword" class="form-control rounded-3" autocomplete="new-password" aria-required="true" placeholder="password" />
                                    <label asp-for="Input.ConfirmPassword" class="text-muted">
                                        <i class="bi bi-check2-circle me-2"></i>Tekrar
                                    </label>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-info border-0 py-2 mb-4 bg-light rounded-3 shadow-sm">
                            <p class="mb-0 small text-muted text-center">
                                <i class="bi bi-info-circle-fill text-info me-2"></i>
                                Şifreniz güçlü ve güvenli olmalıdır.
                            </p>
                        </div>

                        <button id="registerSubmit" type="submit" class="btn btn-warning btn-lg w-100 fw-bold shadow-sm py-3 mb-3 text-uppercase">
                            ÜYELİĞİ TAMAMLA <i class="bi bi-check-lg ms-2"></i>
                        </button>

                        <div class="text-center mt-3 border-top pt-3">
                            <p class="mb-0 small text-muted">Zaten hesabın var mı? 
                                <a asp-page="./Login" class="text-dark fw-bold text-decoration-none ms-1">Giriş Yap</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>

            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <div class="mt-4 text-center">
                    <p class="text-muted small mb-3 text-uppercase fw-semibold" style="letter-spacing: 1px;">Veya şununla kayıt ol</p>
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn btn-outline-dark btn-sm px-4 mx-1 rounded-pill" name="provider" value="@provider.Name">
                                <i class="bi bi-@provider.DisplayName.ToLower()"></i> @provider.DisplayName
                            </button>
                        }
                    </form>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}