@page
@model LoginModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                
                <div class="card-header bg-dark text-white text-center py-4 border-0">
                    <div class="mb-2">
                        <i class="bi bi-lightning-charge-fill text-warning" style="font-size: 3rem;"></i>
                    </div>
                    <h2 class="fw-bold mb-0">SAU GYM</h2>
                    <p class="text-white-50 small">Sınırlarını Zorlamaya Hazır Mısın?</p>
                </div>

                <div class="card-body p-4 p-md-5">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control rounded-3" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="text-muted">
                                <i class="bi bi-envelope-at me-2"></i>E-posta Adresi
                            </label>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control rounded-3" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="text-muted">
                                <i class="bi bi-shield-lock me-2"></i>Şifre
                            </label>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label class="form-check-label small text-muted" asp-for="Input.RememberMe">
                                    Beni Hatırla
                                </label>
                            </div>
                            <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none small fw-bold text-dark">Şifremi Unuttum</a>
                        </div>

                        <button id="login-submit" type="submit" class="btn btn-warning btn-lg w-100 fw-bold shadow-sm py-3 mb-3 text-uppercase">
                            GİRİŞ YAP <i class="bi bi-box-arrow-in-right ms-2"></i>
                        </button>

                        <div class="text-center mt-3 border-top pt-3">
                            <p class="mb-0 small text-muted">Hesabın yok mu? 
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-dark fw-bold text-decoration-none ms-1">Şimdi Kaydol!</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>

            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <div class="mt-4 text-center">
                    <p class="text-muted small mb-3">Veya şununla bağlan:</p>
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn btn-outline-dark btn-sm px-4 mx-1" name="provider" value="@provider.Name">
                                @provider.DisplayName
                            </button>
                        }
                    </form>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}