@page
@model LogoutModel
@{
    ViewData["Title"] = "Güvenli Çıkış";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow-lg rounded-4 animate__animated animate__zoomIn">
                <div class="card-body p-5 text-center">
                    
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <div class="mb-4">
                            <div class="display-1 text-warning mb-3">
                                <i class="bi bi-door-open"></i>
                            </div>
                            <h2 class="fw-bold text-dark">Oturumu Kapat</h2>
                            <p class="text-muted">SAU GYM panelinden ayrılmak istediğinize emin misiniz?</p>
                        </div>

                        <div class="d-grid gap-3">
                            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                                <button type="submit" class="btn btn-dark btn-lg w-100 rounded-3 shadow-sm transition-all">
                                    <i class="bi bi-box-arrow-right me-2"></i>Evet, Çıkış Yap
                                </button>
                            </form>
                            
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg rounded-3 border-0">
                                Vazgeç ve Geri Dön
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="animate__animated animate__fadeIn">
                            <div class="display-1 text-success mb-3">
                                <i class="bi bi-shield-check"></i>
                            </div>
                            <h2 class="fw-bold text-dark">Güvenle Çıkış Yapıldı</h2>
                            <p class="text-muted mb-4">Tekrar görüşmek üzere! Oturumunuz başarıyla sonlandırıldı.</p>
                            
                            <div class="d-grid">
                                <a href="/" class="btn btn-warning btn-lg fw-bold rounded-3 shadow-sm transition-all">
                                    <i class="bi bi-house-door me-2"></i>Ana Sayfaya Dön
                                </a>
                            </div>
                        </div>
                    }

                </div>
            </div>
            
            <p class="text-center text-muted mt-4 small">
                &copy; @DateTime.Now.Year SAU GYM Güvenlik Altyapısı
            </p>
        </div>
    </div>
</div>

@section Styles {
    <style>
        body {
            /* Arka planı biraz daha yumuşak yapalım */
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: 80vh;
        }

        .card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
        }

        .transition-all {
            transition: all 0.3s ease;
        }

        .btn-dark:hover {
            background-color: #000;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2) !important;
        }

        .btn-warning:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(255, 193, 7, 0.3) !important;
        }
    </style>
}
}