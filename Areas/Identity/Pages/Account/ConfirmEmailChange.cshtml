@page
@model ConfirmEmailChangeModel
@{
    ViewData["Title"] = "E-posta Değişikliği Onayı";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card shadow-lg border-0 rounded-4 p-5">
                <i class="bi bi-envelope-check-fill text-success display-1 mb-4"></i>
                <h2 class="fw-bold">@ViewData["Title"]</h2>
                <hr class="w-25 mx-auto mb-4" />
                
                <div class="alert alert-success border-0 shadow-sm py-3 mb-4">
                    E-posta adresiniz başarıyla değiştirildi ve doğrulandı.
                </div>

                <div class="mt-4">
                    <a asp-page="./Login" class="btn btn-warning btn-lg px-5 fw-bold shadow-sm">Giriş Yap</a>
                </div>
            </div>
        </div>
    </div>
</div>