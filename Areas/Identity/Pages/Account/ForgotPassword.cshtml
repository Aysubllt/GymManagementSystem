@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Şifre Sıfırlama";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <div class="bg-light rounded-circle d-inline-block p-3 mb-3">
                            <i class="bi bi-key-fill text-warning display-4"></i>
                        </div>
                        <h2 class="fw-bold">Şifremi Unuttum</h2>
                        <p class="text-muted">E-posta adresini gir, sana bir sıfırlama bağlantısı gönderelim.</p>
                    </div>
                    
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
                        <div class="form-floating mb-4">
                            <input asp-for="Input.Email" class="form-control rounded-3" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Kayıtlı E-posta Adresi</label>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>
                        <button type="submit" class="btn btn-dark btn-lg w-100 fw-bold py-3 mb-3 border-warning border-2">
                            TALİMATLARI GÖNDER
                        </button>
                        <div class="text-center">
                            <a asp-page="./Login" class="text-decoration-none small fw-bold text-muted">
                                <i class="bi bi-arrow-left me-1"></i> Giriş Sayfasına Dön
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }