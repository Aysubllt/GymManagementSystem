<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SAU GYM</title>
    
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* Ana Yapı */
        html, body { height: 100%; }
        body { 
            font-family: 'Poppins', sans-serif; 
            background-color: #f8f9fa; 
            display: flex; 
            flex-direction: column; 
        }
        main { flex: 1 0 auto; }

        /* Navbar Modernizasyonu & Daraltma */
        .navbar { padding-top: 0.5rem !important; padding-bottom: 0.5rem !important; }
        .navbar-brand { font-size: 1.3rem !important; letter-spacing: -0.5px; }
        
        .nav-link { 
            font-weight: 500; 
            font-size: 0.88rem; /* Yazı boyutu küçültüldü */
            transition: all 0.2s ease; 
            padding: 0.5rem 8px !important; /* Yatay boşluklar daraltıldı */
            white-space: nowrap; /* Yazıların alt satıra kaymasını engeller */
        }
        .nav-link:hover { color: #ffc107 !important; }
        
        /* AI Linki - Daha Kompakt */
        .ai-link {
            background: rgba(255, 193, 7, 0.12);
            border-radius: 6px;
            color: #ffc107 !important;
            margin-left: 5px;
            padding: 0.5rem 10px !important;
        }

        /* Yönetim Paneli - Daha Kompakt */
        .admin-nav { 
            border: 1px solid rgba(255, 193, 7, 0.3); 
            border-radius: 6px; 
            margin-left: 5px;
            padding: 0.5rem 10px !important;
        }

        /* Footer */
        .footer { 
            background: #111; 
            color: #999; 
            border-top: 4px solid #ffc107; 
            flex-shrink: 0;
        }

        .alert { border: none; border-radius: 12px; box-shadow: 0 5px 15px rgba(0,0,0,0.08); }

        /* Laptop Ekranları İçin Ekstra Önlem (1200px - 1400px arası) */
        @@media (max-width: 1399px) {
            .nav-link { font-size: 0.82rem; padding: 0.5rem 5px !important; }
            .navbar-brand { font-size: 1.1rem !important; }
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-lg">
            <div class="container-fluid px-lg-5"> <a class="navbar-brand fw-bold text-warning d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-lightning-charge-fill me-1"></i> SAU GYM
                </a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Gyms" asp-action="Index">Salonlar</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Trainers" asp-action="Index">Eğitmenler</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Services" asp-action="Index">Hizmetler</a></li>
                        
                        <li class="nav-item">
                            <a class="nav-link ai-link fw-bold animate__animated animate__pulse animate__infinite" asp-controller="AI" asp-action="Index">
                                <i class="bi bi-robot me-1"></i> AI KOÇUM
                            </a>
                        </li>

                        @if (User.Identity.IsAuthenticated) {
                            <li class="nav-item">
                                <a class="nav-link text-info fw-bold" asp-controller="Appointments" asp-action="MyAppointments">
                                    <i class="bi bi-calendar-check me-1"></i>Randevularım
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Admin")) {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-warning fw-bold admin-nav" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-shield-lock-fill me-1"></i> YÖNETİM
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark shadow-lg border-warning mt-2">
                                    <li><a class="dropdown-item py-2" asp-controller="Gyms" asp-action="Index"><i class="bi bi-building me-2"></i>Salon</a></li>
                                    <li><a class="dropdown-item py-2" asp-controller="Trainers" asp-action="Index"><i class="bi bi-person-badge me-2"></i>Eğitmen</a></li>
                                    <li><a class="dropdown-item py-2" asp-controller="Services" asp-action="Index"><i class="bi bi-activity me-2"></i>Hizmetler</a></li>
                                    <li><hr class="dropdown-divider bg-warning"></li>
                                    <li>
                                        <a class="dropdown-item py-2 fw-bold text-info" asp-controller="Reports" asp-action="Index">
                                            <i class="bi bi-graph-up-arrow me-2"></i>Raporlar (API)
                                        </a>
                                    </li>
                                    <li><a class="dropdown-item py-2" asp-controller="Appointments" asp-action="Index"><i class="bi bi-calendar3 me-2"></i>Randevular</a></li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <div class="d-flex align-items-center">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        <div class="container mt-4">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show animate__animated animate__fadeInDown" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-check-circle-fill fs-4 me-3"></i>
                        <div>@TempData["Success"]</div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show animate__animated animate__shakeX" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-exclamation-triangle-fill fs-4 me-3"></i>
                        <div>@TempData["Error"]</div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
        </div>

        <div class="container my-4">
            @RenderBody()
        </div>
    </main>

    <footer class="footer py-5 mt-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-4 text-center text-md-start mb-4 mb-md-0">
                    <h4 class="text-white fw-bold mb-1">SAU GYM</h4>
                    <p class="small mb-0">Sakarya'nın En Modern Fitness Deneyimi</p>
                </div>
                <div class="col-md-4 text-center mb-4 mb-md-0">
                    <div class="d-flex justify-content-center gap-3">
                        <a href="#" class="text-white fs-4"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-white fs-4"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="text-white fs-4"><i class="bi bi-twitter-x"></i></a>
                        <a href="#" class="text-white fs-4"><i class="bi bi-youtube"></i></a>
                    </div>
                </div>
                <div class="col-md-4 text-center text-md-end">
                    <span class="small">&copy; @DateTime.Now.Year SAU GYM. Tüm Hakları Saklıdır.</span>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>