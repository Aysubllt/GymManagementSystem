@model ErrorViewModel
@{
    ViewData["Title"] = "Hata Oluştu";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="display-1 text-danger mb-4"><i class="bi bi-exclamation-triangle"></i></div>
            <h1 class="fw-bold">Hay aksi! Bir şeyler ters gitti.</h1>
            <p class="lead text-muted">İşleminizi gerçekleştirirken bir hata ile karşılaştık. Lütfen daha sonra tekrar deneyiniz.</p>
            
            @if (Model.ShowRequestId)
            {
                <div class="alert alert-light border small text-muted d-inline-block px-4">
                    <strong>Hata Kodu:</strong> <code>@Model.RequestId</code>
                </div>
            }

            <div class="mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary px-5">Ana Sayfaya Dön</a>
                <button onclick="location.reload()" class="btn btn-outline-secondary px-4 ms-2">Tekrar Dene</button>
            </div>
        </div>
    </div>
</div>