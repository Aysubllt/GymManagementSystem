@model GymManagementSystem.Models.Service

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-4">
                    <h4 class="fw-bold mb-4 text-center">Yeni Hizmet Tanımla</h4>
                    <form asp-action="Create">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Bağlı Olduğu Salon</label>
                            <select asp-for="GymId" class="form-select border-primary" asp-items="ViewBag.GymId"></select>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="DurationMinutes" class="form-label fw-bold"></label>
                                <input asp-for="DurationMinutes" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Price" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text">£</span>
                                    <input asp-for="Price" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">İptal</a>
                            <button type="submit" class="btn btn-success px-5">Oluştur</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>