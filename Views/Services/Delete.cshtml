@model GymManagementSystem.Models.Service

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow border-0 border-top border-danger border-5">
                <div class="card-body text-center p-5">
                    <div class="text-danger mb-4">
                        <i class="bi bi-trash3-fill" style="font-size: 4rem;"></i>
                    </div>
                    <h3 class="fw-bold">Emin misiniz?</h3>
                    <p class="text-muted">
                        <strong>"@Model.Name"</strong> hizmet paketini silmek üzeresiniz. Bu işlem geri alınamaz.
                    </p>
                    
                    <div class="bg-light p-3 rounded mb-4 text-start">
                        <small class="text-uppercase text-muted d-block">Paket Bilgisi</small>
                        <span class="fw-bold">@Model.Name - @Model.Gym?.Name</span>
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-lg">Evet, Sil</button>
                            <a asp-action="Index" class="btn btn-light">Vazgeç</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>