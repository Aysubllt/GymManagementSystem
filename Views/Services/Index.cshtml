@model IEnumerable<GymManagementSystem.Models.Service>

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-bold text-success"><i class="bi bi-tags me-2"></i>Hizmet Paketleri</h5>
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Create" class="btn btn-success btn-sm"><i class="bi bi-plus-lg me-1"></i>Yeni Hizmet Tanımla</a>
            }
        </div>
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Hizmet Adı</th>
                        <th>Süre</th>
                        <th>Fiyat</th>
                        <th>Salon</th>
                        <th class="text-end pe-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td class="ps-4 fw-bold">@item.Name</td>
                            <td><i class="bi bi-clock me-1 text-muted"></i>@item.DurationMinutes dk</td>
                            <td class="text-success fw-bold text-nowrap">@item.Price.ToString("C2")</td>
                            <td><span class="badge bg-light text-dark border">@item.Gym?.Name</span></td>
                            <td class="text-end pe-4 text-nowrap">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Detaylar"><i class="bi bi-eye"></i></a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning"><i class="bi bi-pencil"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>