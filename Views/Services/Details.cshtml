@model GymManagementSystem.Models.Service

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 overflow-hidden">
                <div class="bg-success py-4 text-center text-white">
                    <i class="bi bi-info-circle fs-1"></i>
                    <h3 class="mt-2">Hizmet Detayı</h3>
                </div>
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between border-bottom pb-2 mb-3">
                        <span class="text-muted fw-bold">Hizmet Adı:</span>
                        <span class="fw-bold">@Model.Name</span>
                    </div>
                    <div class="d-flex justify-content-between border-bottom pb-2 mb-3">
                        <span class="text-muted fw-bold">Bağlı Salon:</span>
                        <span class="badge bg-light text-dark border">@Model.Gym?.Name</span>
                    </div>
                    <div class="d-flex justify-content-between border-bottom pb-2 mb-3">
                        <span class="text-muted fw-bold">Seans Süresi:</span>
                        <span><i class="bi bi-clock me-1 text-primary"></i> @Model.DurationMinutes Dakika</span>
                    </div>
                    <div class="d-flex justify-content-between pb-2 mb-4">
                        <span class="text-muted fw-bold">Paket Ücreti:</span>
                        <span class="h4 mb-0 text-success fw-bold">@Model.Price.ToString("C2")</span>
                    </div>

                    <div class="d-flex gap-2">
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning flex-fill fw-bold">Düzenle</a>
                        }
                        <a asp-action="Index" class="btn btn-secondary flex-fill">Listeye Dön</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>