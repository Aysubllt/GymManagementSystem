@model IEnumerable<GymManagementSystem.Models.Appointment>

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-bold text-dark"><i class="bi bi-calendar-event me-2 text-primary"></i>Tüm Randevu Talepleri</h5>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Üye</th>
                        <th>Antrenör</th>
                        <th>Hizmet</th>
                        <th>Tarih & Saat</th>
                        <th>Durum</th>
                        <th class="text-end pe-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td class="ps-4">
                                <div class="fw-bold">@item.Member?.UserName</div>
                                <small class="text-muted">@item.Member?.Email</small>
                            </td>
                            <td>@item.Trainer?.Name</td>
                            <td>
                                <span class="badge bg-light text-dark border">@item.Service?.Name</span>
                            </td>
                            <td>
                                <div><i class="bi bi-calendar3 me-1 text-primary"></i> @item.AppointmentDate.ToShortDateString()</div>
                                <small class="text-muted"><i class="bi bi-clock me-1"></i> @item.AppointmentDate.ToShortTimeString()</small>
                            </td>
                            <td>
                                @if (item.IsConfirmed) {
                                    <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i> Onaylandı</span>
                                } else {
                                    <span class="badge bg-warning text-dark"><i class="bi bi-hourglass-split me-1"></i> Onay Bekliyor</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                @if (!item.IsConfirmed) {
                                    <a asp-action="Confirm" asp-route-id="@item.Id" class="btn btn-sm btn-success shadow-sm">Onayla</a>
                                }
                                <a asp-action="Cancel" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger border-0" 
                                   onclick="return confirm('Bu randevuyu iptal etmek istediğinize emin misiniz?')">
                                    <i class="bi bi-x-lg"></i> İptal
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>