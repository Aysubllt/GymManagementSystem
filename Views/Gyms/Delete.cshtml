@model GymManagementSystem.Models.Gym
<div class="container mt-5">
    <div class="alert alert-danger shadow-sm border-0 d-flex align-items-center p-4">
        <i class="bi bi-exclamation-triangle-fill fs-1 me-4"></i>
        <div>
            <h4 class="alert-heading fw-bold">Silme Onayı</h4>
            <p class="mb-0"><strong>"@Model.Name"</strong> isimli salonu ve buna bağlı tüm hizmetleri silmek istediğinize emin misiniz? Bu işlem geri alınamaz.</p>
        </div>
    </div>
    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger btn-lg px-5">Evet, Sil</button>
        <a asp-action="Index" class="btn btn-secondary btn-lg px-5 ms-2">Vazgeç</a>
    </form>
</div>