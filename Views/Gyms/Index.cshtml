@model IEnumerable<GymManagementSystem.Models.Gym>

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center border-bottom">
            <h5 class="mb-0 fw-bold text-primary"><i class="bi bi-buildings me-2"></i>Spor Salonları</h5>
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Create" class="btn btn-primary btn-sm"><i class="bi bi-plus-lg me-1"></i>Yeni Salon Ekle</a>
            }
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Salon Adı</th>
                            <th>Adres</th>
                            <th>Çalışma Saatleri</th>
                            <th class="text-end pe-4">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                            <tr>
                                <td class="ps-4 fw-semibold text-dark">@item.Name</td>
                                <td class="text-muted small">@item.Address</td>
                                <td>
                                    <span class="badge bg-info-subtle text-info border border-info-subtle px-3 py-2">
                                        <i class="bi bi-clock me-1"></i>
                                        @item.OpeningTime.ToString(@"hh\:mm") - @item.ClosingTime.ToString(@"hh\:mm")
                                    </span>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm" title="Detaylar"><i class="bi bi-eye"></i></a>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm" title="Düzenle"><i class="bi bi-pencil"></i></a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" title="Sil"><i class="bi bi-trash"></i></a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>